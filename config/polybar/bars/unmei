;/============================================================================\
;| Per-bar modules                                                            |
;\============================================================================/

[module/unmei_wifi]
inherit = network-common
interface = wlp62s0
format-connected-underline = ${colors.notification-0}

[module/unmei_eth]
inherit = network-common
interface = enp61s0
format-connected-underline = ${colors.notification-1}

[module/unmei_cpu_temp]
inherit = temperature-common
hwmon-path = /sys/devices/virtual/thermal/thermal_zone5/hwmon4/temp1_input



;/============================================================================\
;| Common configuration                                                       |
;\============================================================================/

[unmei]
; General:
background = ${colors.bg}
fixed-center = false
height = ${vars.height}
locale = en_GB.UTF-8
padding = 0
width = 100%

; Avoid i3lock showing systray:
override-redirect = false
wm-restack = i3

; Fonts:
font-0 = Roboto Mono:style=Regular:size=10;2
font-1 = DejaVu Sans:style=Regular:size=10;2
font-2 = Source Han Serif JP,源ノ明朝 JP:style=Regular:size=14
font-3 = Symbola:style=Regular
font-4 = Font Awesome 6 Free:style=Solid:size=12;2
font-5 = Font Awesome 6 Brands:style=Solid;size=12;2
foreground = ${colors.fg}

; Modules:
module-margin-left = 1
module-margin-right = 1
separator = |

; Mouse behaviour:
cursor-click = pointer
cursor-scroll = ns-resize

; Underlines:
line-color = ${colors.bg-urgent}
line-size = 3



; vim:ft=dosini

